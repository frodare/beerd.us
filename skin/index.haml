#main.index
  :each article in articles.slice(0,15)
    .article
      .author
        %img{src:gravitar(article.author.email, 30)}
        By #{article.author.name}
        .date{title: article.date}&= formatDate(article.date, "%Y.%m.%d")
      %h3
        %a{href: "/" + article.name}&= article.title
      = intro(article.markdown)
      %a.more{href: "/" + article.name} Read more...

#sidebar
  .aside
    = markdownEncode(description)
  
  .bubble
    %h4 Links
    %div.link
      %a{target:"_blank",href:"http://nfbl.org/"} Norh Florida Brewer's League
    %div.link
      %a{target:"_blank",href:"http://www.bjcp.org/index.php"} Beer Judge Certification Program (BJCP)
    %div.link
      %a{target:"_blank",href:"http://pintsforpaws.org/"} Pints for Paws
    %div.link
      %a{target:"_blank",href:"http://momospizza.com/the-brewery/"} Momo's Pizza and Brew
    %div.link
      %a{target:"_blank",href:"http://grasslandsbrewery.com/"} Grasslands Brewery


  .bubble
    %h4
      Articles
    %ul
      :each article in articles.slice(0,20)
        %li
          %a{href: "/" + article.name}&=article.title
          &=" by " + article.author.name
          :if article.node
            %span.versiontag&= article.node
  




